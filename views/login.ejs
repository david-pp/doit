<% include header %>
<% include nav %>

<form class="form-signin" action="/login" method="post">
    <% if (typeof errmsg != 'undefined' && errmsg) { %>
    <div class="alert alert-warning"><%= errmsg %></div>
    <% } %>
    <input type="text" class="form-control" placeholder="Email address"  name="username" required autofocus>
    <input type="password" class="form-control" placeholder="Password" name="userpasswd" required>
    <label class="checkbox">
      <input type="checkbox" value="1" name="remember"> Remember me
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>

<% include footer %>
