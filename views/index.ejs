<div class="container">

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
		<span class="glyphicon glyphicon-flash"></span> 编码中
  </div>
  <div id="tasks_coding" style="width:100%"></div>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
		<span class="glyphicon glyphicon-refresh"></span> 联调中
  </div>
  <div id="tasks_cotest" style="width:100%"></div>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
		<span class="glyphicon glyphicon-fire"></span> 测试中
  </div>
  <div id="tasks_qatest" style="width:100%"></div>
</div>


