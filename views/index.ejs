<script src="/js/jquery-1.10.2.min.js"></script>
<script src="/codebase/dhtmlxcommon.js"></script>
<script src="/codebase/dhtmlxgrid.js"></script>
<script src="/codebase/dhtmlxgridcell.js"></script>
<script  src="/codebase/excells/dhtmlxgrid_excell_link.js"></script>
<script src="/js/task_grid.js"></script>

<script>
	var coding = new TaskGrid();
	var cotest = new TaskGrid();
	var qatest = new TaskGrid();

	$.get("/ajax/tasklist?status=" + Task.status.coding,function(data, status){
		if (data.length > 0) {
			coding.init('tasks_coding');
			coding.parse(data);
		}
	});

	$.get("/ajax/tasklist?status=" + Task.status.cotest,function(data, status){
		if (data.length > 0) {
			cotest.init('tasks_cotest');
			cotest.parse(data);
		}
	});

	$.get("/ajax/tasklist?status=" + Task.status.qatest,function(data, status){
		if (data.length > 0) {
			qatest.init('tasks_qatest');
			qatest.parse(data);
		}
	});

</script>


